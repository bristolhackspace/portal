{% extends "base.html.j2" %}

{% block title %}Home{% endblock %}

{% block contents %}
<div class="container">
    <ul class="app-grid">
    {% for app in apps %}
        <li>
            <h2>{{ app.name }}</h2>
            <p>{{ app.description }}</p>
            <a class="button" href="{{ app.url }}" aria-label="Open {{ app.name }}">Open</a>
        </li>
    {% endfor %}
    </ul>
</div>
{% endblock %}